<!DOCTYPE html>
<html ng-app="track-dashboard">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Sails Socket Dependancy -->
  <script type="text/javascript" src="/js/dependencies/sails.io.js"></script>
  
  <link rel='stylesheet' href='assets/css/fullcalendar.css'>
  <link rel='stylesheet' href='assets/css/datatables/datatables.css'>
  <link rel='stylesheet' href='assets/css/datatables/bootstrap.datatables.css'>
  <link rel='stylesheet' href='assets/scss/chosen.css'>
  <link rel='stylesheet' href='assets/scss/font-awesome/font-awesome.css'>
  <link rel='stylesheet' href='assets/css/app.css'>
  <link rel='stylesheet' href='assets/css/tracker.css'>

  <link href='http://fonts.googleapis.com/css?family=Oswald:300,400,700|Open+Sans:400,700,300' rel='stylesheet' type='text/css'>

  <link href="assets/favicon.ico" rel="shortcut icon">
  <link href="assets/apple-touch-icon.png" rel="apple-touch-icon">
  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
@javascript html5shiv respond.min
<![endif]-->

<title>Grupo Tradeco S.A. de C.V.</title>

</head>

<body ng-controller="DashboardCtrl">
<div>

  <div class="row">
    <style type="text/css">
      .angular-google-map-container { height: 100vh; }
    </style>
    <div>
  <div class="row">
    
    <ui-gmap-google-map center='map.center' zoom='map.zoom'>
      
      <ui-gmap-markers models="puntos" coords="'self'" icon="'icon'" click="mostrarDatos">
          
          </ui-gmap-markers>
          
          <ui-gmap-markers models="transportistas" coords="'self'" icon="'icon'" 
            click="onClick">
          </ui-gmap-markers>

            <ui-gmap-markers models="detenidos" coords="'self'" icon="'icon'">
          </ui-gmap-markers>
    </ui-gmap-google-map>
  </div>
  
  <div id="myModal" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">INFORMACIÓN CONDUCTOR</h4>
        </div>
        <div class="modal-body">
          <div class="row">
              <div class="col-xs-6 col-sm-3">Conductor</div>
              <div class="col-xs-6 col-sm-3">{{conductor.nombre}}</div>
          </div>
          <div class="row">
              <div class="col-xs-6 col-sm-3">Telefono</div>
              <div class="col-xs-6 col-sm-3">{{conductor.telefono}}</div>
          </div>
          <div class="row">
              <div class="col-xs-6 col-sm-3">Placas</div>
              <div class="col-xs-6 col-sm-3">{{conductor.unidad.placa}}</div>
          </div>
          <div class="row">
              <div class="col-xs-6 col-sm-3">Punto de Partida</div>
              <div class="col-xs-6 col-sm-3">{{conductor.startLocation}}</div>
          </div>
          <div class="row">
              <div class="col-xs-6 col-sm-3">Punto destino</div>
              <div class="col-xs-6 col-sm-3">{{conductor.endLocation}}</div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cerrar
          </button>
          <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="verDetalle()">Ver Detalle</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


  <div id="modalPuntos" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">INFORMACIÓN DE
          <span ng-show="puntoData.icon.url==='office-building.png'"> CEDIS </span>
          <span ng-show="puntoData.icon.url==='parkinggarage.png'"> TERMINALES </span>
          <span ng-show="puntoData.icon.url==='construction.png'"> OBRAS </span>
          </h4>
        </div>
        <div class="modal-body">
          <span ng-show="puntoData.icon.url==='construction.png'" style="width:100%">
            <div class="row" align="center" style="width:100%">
                <h3>OBRA NO. {{puntoData.no}} </h3>
            </div>          
          </span>
          <div class="row" align="center">
              <h3><div style="width:100%">{{puntoData.title}}</div></h3>
          </div>
          <div class="row" align="center">
              <h4><div>{{puntoData.direccion}}</div></h4>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            Cerrar
          </button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

</div>

 
  </div>
</div>
    <!-- Librerias -->
    <script src="js/angular-1.3.8/angular.min.js"></script>
    <script src="js/angular-1.3.8/angular-animate.js"></script>
    <script src="js/angular-1.3.8/angular-route.min.js"></script>
    <script src="js/angular-1.3.8/angular-input-match.js"></script>
    <script src="js/angular-1.3.8/angular-ui/angular-ui-router.min.js"></script>

    <!-- Google Map -->
    <script src="js/angular-google-map/lodash.js"></script>  
    <script src="js/angular-google-map/angular-google-maps.min.js"></script>  
    <script src='//maps.googleapis.com/maps/api/js?sensor=false'></script>
    <!-- Librerias -->
    <script src="js/module/login.js"></script>  
    <script src="js/module/dashboard.js"></script>  
    <script src="js/track.js"></script>  

  </body>

  </html>